
<h3>Изменить зал</h3>
@using (Html.BeginForm("Hall", "Edit", FormMethod.Post, new { @class = "mt-3" }))
{
    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Id</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="id" id="id" value="@ViewBag.Id">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Название зала</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="hall_name" id="hall_name" value="@ViewBag.hall_name">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Этаж</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="floor" id="floor" value="@ViewBag.floor">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Музей</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="museum" id="museum" value="@ViewBag.museum">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Город</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="city" id="city" value="@ViewBag.city">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <button class="col-sm-2 btn btn-primary" value="Edit">Обновить</button>
    </div>
}
