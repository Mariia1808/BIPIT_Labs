<h3>Добавить зал</h3>
@using (Html.BeginForm("Hall", "Create", FormMethod.Post, new { @class = "mt-3" }))
{
    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Название зала</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="hall_name" id="hall_name">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Этаж</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="floor" id="floor">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Музей</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="museum" id="museum">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Город</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="city" id="city">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <button class="col-sm-2 btn btn-primary" value="Create">Добавить</button>
    </div>
}
