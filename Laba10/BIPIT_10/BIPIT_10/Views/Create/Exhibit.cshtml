<h3>Добавить экспонат</h3>
@using (Html.BeginForm("Exhibit", "Create", FormMethod.Post, new { @class = "mt-3" }))
{


    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Экспонат</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="exhibit" id="exhibit">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Автор</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="author" id=" author">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Название работы</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="name" id="name">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Материал</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" name="material" id="material">
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-3 col-form-label">Год</label>
        <div class="col-sm-6">
            <input class="form-control" type="date" name="year" id="year">
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <button class="col-sm-2 btn btn-primary" value="Create">Добавить</button>
    </div>
}